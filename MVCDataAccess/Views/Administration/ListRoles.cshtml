@model IQueryable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}


<h1>ListRoles</h1>
<a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">Craete Role</a>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
            @if(Model.Any())
            {
                @foreach(var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a> | 
                            <a asp-action="DeleteRole" asp-controller="Administration" asp-route-id="@role.Id">Delete</a>
                        </td>
                    </tr>        
                }
            }
    </tbody>
</table>

