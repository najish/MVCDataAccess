@model CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1>CreateRole</h1>

<form method="post">
    <div asp-validation-summary="All">
        <div>
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" />
            <span asp-validation-for="RoleName"></span>
        </div>
        <div>
            <input type="submit" value="Create Role" class="btn btn-primary"/>
            <a class="btn btn-dark" asp-action="#" asp-controller="Account">Cancel</a>
        </div>
    </div>
</form>
