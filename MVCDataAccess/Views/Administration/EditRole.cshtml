@model CreateRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>


<form method="post">
    <div class="asp-validation-summary">
        <div>
            <label asp-for="RoleId"></label>
            <input asp-for="RoleId" readonly/>
            <span asp-validation-for="RoleId"></span>
        </div>

        <div>
            <label asp-for="RoleName"></label>
            <input asp-for="RoleName" />
            <span asp-validation-for="RoleName"></span>
        </div>

        <div>
            <input type="submit" value="Edit Role" class="btn btn-primary"/>
            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-dark">Cancel</a>
        </div>
    </div>
</form>
