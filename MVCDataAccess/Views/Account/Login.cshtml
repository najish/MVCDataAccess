@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<form method="post" asp-action="Login">
    <div asp-validation-summary="All">
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>


        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>

        </div>

        <div>
            <input asp-for="RememberMe" />
        </div>

        <div>
            <input type="submit" class="btn btn-primary"/>
            <a class="btn btn-dark" asp-controller="Student" asp-action="GetStudents">Cancel</a>
        </div>

        @if(Model.AllScheme.Any())
        {
            <form method="post" asp-action="ExternalLogin">

                @foreach(var scheme in Model.AllScheme)
                {
                    <input type="submit" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" asp-route-provider="@scheme.Name" title="Login using @scheme.DisplayName" class="btn btn-primary" value="@scheme.DisplayName">
                }
            </form>
        }
        else
        {
            <h1>External logins are not available</h1>

        }

    </div>
</form>
