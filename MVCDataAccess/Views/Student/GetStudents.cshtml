@model List<Student>
@{
    ViewData["Title"] = "GetStudents";
}

<h1>List of Students</h1>
<h6>
    <a asp-action="Add" asp-controller="Student">Add Student</a>
</h6>

<form method="get" asp-action="GetStudents">
    <div>
        <input type="text" name="searchString" placeholder="filter students"/>
        <input type="submit" value="search student" />
    </div>
</form>
<table>
    <thead>
        <tr>
            <th>
                <a asp-action="GetStudents" asp-controller="Student" asp-route-reverse="@true">Id</a>
            </th>
            <th>
                <a asp-action="GetStudents" asp-controller="Student" asp-route-sortOrder="@ViewData["NameSortParam"]">Name</a>
             </th>
            <th>Address</th>
        </tr>
        
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Address</td>
                <td>
                    <a asp-action="Update" asp-controller="Student" asp-route-id="@student.Id">Edit</a> | 
                    <a asp-action="Delete" asp-controller="Student" asp-route-id="@student.Id">Delete</a>
                </td>
            </tr>
        }
    </thead>
</table>

